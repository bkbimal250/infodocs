# ============================================
# FastAPI Backend Environment Configuration
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# ============================================
# Application Settings
# ============================================
APP_NAME=infodocs API
DEBUG=False
HOST=0.0.0.0
PORT=8000

# ============================================
# Security & JWT
# ============================================
# Generate a secure secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production-generate-a-secure-random-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# ============================================
# Database Configuration (MySQL)
# ============================================
DB_NAME=spadocs
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=your_database_host
DB_PORT=3306

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins
# Example: http://localhost:5173,https://yourdomain.com
CORS_ORIGINS=http://localhost:5173,https://yourdomain.com

# ============================================
# Email Configuration (SMTP)
# ============================================
EMAIL_BACKEND=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=True

# Gmail SMTP credentials
# Note: Use Gmail App Password, not your regular password
# Generate App Password: https://myaccount.google.com/apppasswords
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-gmail-app-password
SMTP_FROM_EMAIL=Your App Name <your-email@gmail.com>
SERVER_EMAIL=your-email@gmail.com

# Set to False in production to enable email sending
# Set to True in development to skip email sending (OTP will be logged only)
SKIP_EMAIL=False

# ============================================
# File Upload Settings
# ============================================
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=media

# ============================================
# Redis Cache (Optional)
# ============================================
REDIS_URL=redis://localhost:6379/0
